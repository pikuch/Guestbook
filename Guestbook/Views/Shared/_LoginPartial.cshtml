@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form id="logoutForm" class="bordered" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button id="logout" type="submit" class="bordered">Logout</button>
    </form>
}
else
{
    <a class="bordered" id="register" asp-controller="Account" asp-action="Register">Register</a>
    <a class="bordered" id="login" asp-controller="Account" asp-action="Login">Login</a>
}
